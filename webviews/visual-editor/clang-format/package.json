{
    "name": "visual-editor-clang-format-webview",
    "version": "1.0.10",
    "private": true,
    "description": "Webview frontend for Clotho clang-format visual editor",
    "scripts": {
        "build": "webpack --mode production",
        "dev": "webpack --mode development --watch",
        "clean": "rimraf dist",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,json}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,css,json}\""
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "highlight.js": "^11.11.1"
    },
    "devDependencies": {
        "@types/react": "^19.1.9",
        "@types/react-dom": "^19.1.7",
        "@types/vscode-webview": "^1.57.5",
        "css-loader": "^7.1.2",
        "html-webpack-plugin": "^5.6.3",
        "mini-css-extract-plugin": "^2.9.3",
        "rimraf": "^6.0.1",
        "style-loader": "^4.0.0",
        "ts-loader": "^9.5.2",
        "typescript": "^5.9.2",
        "webpack": "^5.101.0",
        "webpack-cli": "^6.0.1"
    }
}