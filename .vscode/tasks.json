{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": "$tsc"
        },
        {
            "type": "npm",
            "script": "watch",
            "group": "build",
            "presentation": {
                "reveal": "never"
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "Package Extension",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "package"
            ],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            },
            "dependsOn": "npm: compile"
        },
        {
            "label": "Install Extension Dependencies",
            "type": "shell",
            "command": "npm",
            "args": [
                "install"
            ],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "clear": true
            }
        }
    ]
}
